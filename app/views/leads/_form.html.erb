<%= simple_form_for(@lead, :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } }) do |f| %>
  <% if @lead.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lead.errors.count, "error") %> prohibited this lead from being saved:</h2>

      <ul>
      <% @lead.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-lg-6">
      <%= f.input :fname, :label => "First Name", :placeholder => "Kate" %>
    </div>
    <div class="col-lg-6">
      <%= f.input :lname, :label => "Last Name", :placeholder => "Austen" %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <%= f.input :phone, :label => "Phone Number", :placeholder => "555-481-5162" %>
    </div>
    <div class="col-lg-6">
      <%= f.input :email, :label => "Email Address", :placeholder => "freckles@kwote.com" %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="row">
        <div class="col-lg-6">
          <%= f.input :city, :placeholder => "Oceanic" %>
        </div>
        <div class="col-lg-6">
          <%= f.input :state collection:  => c.states %>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="row">
        <div class="col-lg-6">
          <%= f.input :gender, collection: ["M", "F"], as: :radio_buttons %>
        </div>
        <div class="col-lg-6">
          <%= f.input :smoker, as: :radio_buttons, :name => "smoker", :id => " simple-form-radio" %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="actions">
      <%= f.submit "Find an Agent",  :class => "btn btn-primary btn-block" %>
    </div>
  </div>
    
<% end %>
